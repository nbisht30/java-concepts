package com.chegg;

public class Animal {
	String type;
	double weight;

	public Animal() {
		this.weight = 0;
	}

	public Animal(double weight) {
		if (weight > 0)
			this.weight = weight;
		else {
			this.weight = 0;
			System.out.println("Cannot have weight less than 0. Weight initialized to 0 as default");
		}
	}

	public void setWeight(double weight) {
		if (weight > 0)
			this.weight = weight;
		else {
			this.weight = 0;
			System.out.println("Cannot have weight less than 0. Weight initialized to 0 as default");
		}
	}

	public double getWeight() {
		return weight;
	}
}
